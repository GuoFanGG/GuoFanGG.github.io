<!DOCTYPE HTML>
<html>
	<head>
		<title></title>
		<meta charset="utf-8" />
		<style type="text/css">
			#div{
			width:1920px;
			height:1080px;
				background:url('143630zlkfc9amcaaaplcl.jpg') no-repeat;
			}	
		</style>
		<script src='jquery-1.11.3.min.js' type='text/javascript'></script>
	</head>
	<body>
		<div id='div'>
			<canvas id='canvas' width="1920" height="1080">糟糕！浏览器不支持！</canvas>
		</div>

		<script>
			$('#div').click(function(){
				alert('1');
				location.href='http://GuoFanGG.github.io';
				//window.open('http://GuoFanGG.github.io');
			})
			var canvas=document.getElementById('canvas');
			var context=canvas.getContext('2d');

			setInterval(function(){
				context.clearRect(0,0,canvas.width,canvas.height);
				var r=parseInt(Math.random()*10+3);
				var x=parseInt(Math.random()*(canvas.width-2*r)+2*r);
				var h=canvas.height-2*r;

				setInterval(function(){
					context.beginPath();
					context.arc(x-r,h,r,0,Math.PI*2);
					context.closePath();
					context.strokeStyle='lightblue';
					context.stroke();
					h-=r;
				},50);
			
			},50);
			

			
			
		</script>
	</body>
</html>